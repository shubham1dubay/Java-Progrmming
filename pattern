package Programming;
import java.util.Scanner;
public class Pattern {
public static void main(String[] args) {
		
		int row,i,j,s;
		System.out.println("Enter the number");
		Scanner sc=new Scanner(System.in);
		row=sc.nextInt();
		for(i=1;i<=row;i++)
			
		{
			for(s=0;s<(row-i);s++)
			{
				System.out.print(" ");
			}
			for(j=0;j<(i*2-1);j++)
			{
				System.out.print("*");
			}
			System.out.println();
		}
	}

}
